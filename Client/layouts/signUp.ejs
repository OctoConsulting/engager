<div class="login-div col-md-6">
    <div class="row">
        <div class="col-md-12 login-side">
            <form action="/auth/signUp" method="POST">
                <h2 class="login-title">Sign on</h2>
                <div class="form-group">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="username" name="userName" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password1" name="password1" placeholder="Confirm Password">
                </div>
                <button type="submit" class="btn  btn-block button-login">Go</button>

            </form>
        </div>
    </div>
</div>
